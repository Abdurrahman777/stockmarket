<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical"
        tools:context=".activity.ResultActivity">

        <RelativeLayout
            android:id="@+id/tollbar_layout"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:src="@drawable/icon_back"></ImageView>

            <TextView
                style="@style/myTextView"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_toRightOf="@id/imgBack"
                android:fontFamily="@font/font_arial"
                android:text="Result"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/imgFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:src="@drawable/icon_filter"></ImageView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:background="@drawable/et_background_trans"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBankName"
                style="@style/myTextView"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:fontFamily="@font/font_arial"
                android:padding="@dimen/_5sdp"
                android:text="ABCD"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCategory"
                    style="@style/myTextView"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Volatile"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvStrategy"
                    style="@style/myTextView"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Strategy-1"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvQuantity"
                    style="@style/myTextView"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Quantity-1000"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBuyValue"
                    style="@style/myTextView"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Buy - 610"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvSellValue"
                    style="@style/myTextView"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Sell-630"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>
            <TextView
                style="@style/myTextView"
                android:layout_width="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="UBEV"></TextView>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <TextView
                style="@style/myTextView"
                android:layout_width="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="LBEV"></TextView>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <TextView
                style="@style/myTextView"
                android:layout_width="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Reward"></TextView>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <TextView
                style="@style/myTextView"
                android:layout_width="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Risk"></TextView>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <TextView
                style="@style/myTextView"
                android:layout_width="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="R/R Ratio"></TextView>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <TextView
                style="@style/myTextView"
                android:layout_width="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="View"></TextView>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@color/white"></View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_resultView"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:overScrollMode="never"></androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</layout>
